# Use vim as the visual editor
export VISUAL=vim
export EDITOR=$VISUAL

# nvm mirror
export NVM_NODEJS_ORG_MIRROR=https://npm.taobao.org/dist
# reset PATH
PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/bin/X11:/usr/games
# add composer path
export PATH=$HOME/.composer/vendor/bin:$PATH
# add custom bin path
export PATH=$HOME/app/bin:$PATH
# add nvm and local node path
if which nvm &> /dev/null;then
    installed_latest=`nvm_ls | tail -1`
    export PATH=${NVM_DIR}/versions/node/${installed_latest}/bin:$PATH
fi

# Local config
[[ -f ~/.zshenv.local ]] && source ~/.zshenv.local
